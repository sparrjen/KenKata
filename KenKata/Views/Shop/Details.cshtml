@model KenKata.Entities.Product

@{
    ViewData["Title"] = "Details";
}

<partial name="_ProductBannerPartial" />

<div id="product-details">
    <div class="container d-flex">
        <div id="product-pictures">
            <div class="big-productpic">
                <img id="ProductImg" src="/images/Products/Product details/shoepic1.svg" alt="" width="100%">
            </div>
            <div class="small-product-img-row">
                <div class="small-product-img-col">
                    <img class="small-product-img" src="/images/Products/Product details/shoepic1.svg" alt="">
                </div>
                <div class="small-product-img-col">
                    <img class="small-product-img" src="/images/Products/Product details/shoepic2.svg" alt="">
                </div>
                <div class="small-product-img-col">
                    <img class="small-product-img" src="/images/Products/Product details/shoepic4.svg" alt="">
                </div>
                <div class="small-product-img-col">
                    <img class="small-product-img" src="/images/Products/Product details/shoepic5.svg" alt="">
                </div>
            </div>
        </div>


        <div id="p-details">
            <div class="mb-4">
                <h3>@Html.DisplayFor(model => model.ProductName)</h3>                
            </div>
            <div class="detail-descripton mb-4">
                <p>@Html.DisplayFor(model => model.ShortDescription)</p>
            </div>
            <div class="d-flex mb-4">
                <h3>$</h3>
                <h3>@Html.DisplayFor(model => model.Price)</h3>
                <div class="d-flex ml-4">
                    @if (Model.InStock == true)
                    {
                        <div class="d-flex mr-1">
                            <img src="/Images/Products/In stock.svg" alt="Alternate Text" />
                            <p class="inoutstock">In stock</p>
                        </div>
                    }
                    @if (Model.InStock == false)
                    {
                        <div class="d-flex mr-1">
                            <img src="/Images/Products/not In stock.svg" alt="Alternate Text" />
                            <p class="inoutstock">Out of stock</p>
                        </div>
                    }
                </div>                
            </div>
            <div class="d-flex mb-4">
                <div class="mr-4">
                    <partial name="_InputNumberPartial" />
                </div>
                <div class="mr-5">
                    <partial name="_AddToCartBtnPartial" />
                </div>
                <div class="p-details-icons d-flex">
                    <img class="mr-4" src ="/Images/Products/Color icon.svg" alt="Alternate Text" />
                    <img class="mr-4" src="/Images/Products/Compare icon.svg" alt="Alternate Text" />
                    <img class="mr-4" src="/Images/Products/Heart icon.svg" alt="Alternate Text" />
                </div>
            </div>
            <div class="d-flex mb-4">
                <p>Category:</p>
                <p id="p-category">@Html.DisplayFor(model => model.Category.CategoryName)</p>
            </div>
            <div class="d-flex mb-4">
                <p>Tags:</p>
                <div id="tags" class="d-flex ml-2">
                    <p>Fashion</p>
                    <p>@Html.DisplayFor(model => model.Category.CategoryName)</p>
                </div>
            </div>
            <div id="share" class="d-flex">
                <p>Share:</p>
                <div id="share-icons" class="d-flex">
                    <i class="fab fa-facebook-f"></i>
                    <i class="fab fa-twitter"></i>
                    <i class="fab fa-youtube"></i>
                    <i class="fab fa-twitch"></i>
                    <i class="fab fa-shopify"></i>
                </div>
            </div>
        </div>
    </div>
</div>

